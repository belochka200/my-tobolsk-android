<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/small_indent"
    android:layout_marginBottom="@dimen/small_indent"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_event_card__image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                tools:src="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/item_event_card__like_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/small_indent"
                android:layout_marginTop="@dimen/small_indent"
                android:layout_marginEnd="@dimen/small_indent"
                android:layout_marginBottom="@dimen/small_indent"
                android:src="@drawable/ic_round_favorite_border_24" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_event_card__title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_indent"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.MyTobolsk.HeadlineSmall"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/item_event_card__time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_indent"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            tools:text="@string/when" />

        <TextView
            android:id="@+id/item_event_card__place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_indent"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            tools:text="@string/where" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>