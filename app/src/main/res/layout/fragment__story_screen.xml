<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  TODO add image description  -->
    <ImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/story_toolbar_menu"
        app:navigationIcon="@drawable/ic_round_arrow_back_ios_new_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_story_describe"
        android:orientation="vertical">

        <TextView
            android:id="@+id/story_title"
            style="@style/TextAppearance.MyTobolsk.HeadlineLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/medium_indent"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"

            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/story_describe"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_indent"
            android:layout_marginTop="@dimen/small_indent"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="?attr/colorOnSurface"

            tools:text="@tools:sample/lorem/random" />

        <Button
            android:id="@+id/story_show_all_describe_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/medium_indent"
            android:layout_marginBottom="@dimen/medium_indent"
            android:text="@string/show_all" />

    </LinearLayout>

    <!--  BottomSheet Fragment  -->
    <LinearLayout
        android:id="@+id/story_detail_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_story_bottom_sheet"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

        tools:visibility="gone">

        <TextView
            android:id="@+id/story_detail_title"
            style="@style/TextAppearance.MyTobolsk.HeadlineLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_indent"
            android:textColor="?attr/colorOnSurface"

            tools:maxLines="2"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/story_detail_describe"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_indent"
            android:textColor="?attr/colorOnSurface"

            tools:maxLines="10"
            tools:text="@tools:sample/lorem/random" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>